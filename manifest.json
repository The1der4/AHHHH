{
    "name": "1der4 Youtube Plugin",
    "version": "1.0",
    "description": "Bookmarks and Theme",

    "permissions":["storage", "tabs"],
    "host_permissions":["https://*.youtube.com/#"],

    "background":{
        "service_worker": "background.js"
    },

    "content_scripts":[
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["contentScript.js"]
        }
    ],
    
    "action": {
      "default_icon": "C_Lpis_-1640373320268009474-20230327_232050-img1.jpg",
      "default_popup": "popup.html"
    },

    "manifest_version": 3
  }